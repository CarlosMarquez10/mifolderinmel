<!-- Modal para mostrar documentos faltantes -->
<% if (missingDocumentsNames && missingDocumentsNames.length > 0) { %>
    <div id="missingDocumentsModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Documentos Faltantes</h2>
        <p>Los siguientes documentos son obligatorios y faltan por cargar:</p>
        <ul>
          <% missingDocumentsNames.forEach(function(docName) { %>
            <li><%= docName %></li>
          <% }); %>
        </ul>
      </div>
    </div>
  <% } %>
  
  <!-- Agrega los estilos del modal -->
  <style>
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0,0,0,0.5);
  }
  
  .modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
  }
  
  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }
  </style>
  
  <!-- Agrega el script para controlar el modal -->
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('missingDocumentsModal');
    const closeBtn = document.querySelector('.close');
  
    <% if (missingDocumentsNames && missingDocumentsNames.length > 0) { %>
      modal.style.display = 'block';
    <% } %>
  
    closeBtn.onclick = function() {
      modal.style.display = 'none';
    }
  
    window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = 'none';
      }
    }
  });
  </script>
  