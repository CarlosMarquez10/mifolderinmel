<!-- views/error.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DocVault - Error en Registro</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div class="error-container">
            <h1>⚠️ No se pudo completar el registro</h1>
            <div class="error-message">
                <% if (cedula !== 'No proporcionada') { %>
                    <p>Cédula: <strong><%= cedula %></strong></p>
                <% } %>
                <p class="error-text"><%= mensaje %></p>
            </div>
            <div class="action-buttons">
                <a href="/" class="button">Volver al formulario</a>
            </div>
        </div>
    </div>
</body>
</html>